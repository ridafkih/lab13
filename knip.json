{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignore": [
    "**/dist/**",
    "**/.next/**",
    "**/.turbo/**"
  ],
  "workspaces": {
    "packages/*": {
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/ui": {
      "entry": [
        "src/components/*.tsx",
        "src/utils/*.ts",
        "src/hooks/*.ts"
      ],
      "project": ["src/**/*.{ts,tsx,css}"]
    },
    "packages/database": {
      "entry": ["src/schema/*.ts"],
      "project": ["src/**/*.ts"],
      "ignore": ["src/migrations/**", "drizzle.config.ts"],
      "drizzle": false
    },
    "packages/browser-protocol": {
      "entry": ["src/*.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/multiplayer-client": {
      "entry": ["src/*.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/multiplayer-sdk": {
      "entry": ["src/*.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/multiplayer-server": {
      "entry": ["src/*.ts"],
      "project": ["src/**/*.ts"]
    },
    "services/api": {
      "project": ["src/**/*.ts"]
    },
    "services/browser-daemon": {
      "project": ["src/**/*.ts"]
    },
    "services/mcp": {
      "project": ["src/**/*.ts"]
    },
    "applications/web": {
      "entry": [
        "src/app/**/page.tsx",
        "src/app/**/layout.tsx"
      ],
      "project": ["src/**/*.{ts,tsx,css}", "*.config.{ts,mjs}"],
      "ignore": ["**/.next/**"]
    }
  }
}
